{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./server",
    "rootDir": "./server",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "server/**/*"
  ],
  "exclude": ["node_modules", "dist", "client", "api"]
}

