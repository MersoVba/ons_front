{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build:client",
  "outputDirectory": ".",
  "functions": {
    "api/index.ts": {
      "maxDuration": 300,
      "includeFiles": "dist/spa/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/:path*",
      "destination": "/api"
    }
  ]
}
