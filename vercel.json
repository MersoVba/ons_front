{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build:client",
  "outputDirectory": ".",
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node",
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "destination": "/dist/spa/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ]
}

